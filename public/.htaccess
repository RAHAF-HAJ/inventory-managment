RewriteEngine On

RewriteRule ^([a-zA-Z_-]+)/([a-zA-Z_-]+)$ index.php?p=$1/$2
RewriteRule ^([a-zA-Z_-]+)$ index.php?p=$1/index
RewriteRule ^([a-zA-Z_-]+)/([a-zA-Z_-]+)/([0-9]+)$ index.php?p=$1/$2&id=$3
RewriteRule ^([a-zA-Z_-]+)/([a-zA-Z_-]+)/([0-9]+)/([0-9]+)$ index.php?p=$1/$2&id=$3&art_row_id=$4
RewriteRule ^([a-zA-Z_-]+)/([a-zA-Z_-]+)/([0-9]+)$ index.php?p=$1/$2/$3



RewriteRule ^api/v[1-9]/([a-zA-Z_-]+)/([a-zA-Z_-]+)$ index.php?p=$1/$2/$3
RewriteRule ^api/v[1-9]/([a-zA-Z_-]+)/([a-zA-Z_-]+)/([0-9]+)$ index.php?p=$1/$2/$3&id=$4
RewriteRule ^api/v[1-9]/([a-zA-Z_-]+)/([a-zA-Z_-]+)/([0-9]+)/([0-9]+)$ index.php?p=$1/$2/$3&id=$4&art_row_id=$5
RewriteRule ^api/v[1-9]/([a-zA-Z_-]+)/([a-zA-Z_-]+)/([0-9]+)$ index.php?p=$1/$2/$3/$4